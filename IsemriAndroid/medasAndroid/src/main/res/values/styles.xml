<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="medasBaseTheme" parent="Theme.AppCompat.Light">


        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

<style name="Theme.AppCompat.Light.TitleTextStyle" parent="@android:style/Widget.TextView">
    <item name="android:textSize">35sp</item>

</style>

    <!-- Application theme. -->
    <style name="medasTheme" parent="elecTheme">
        <item name="android:titleTextStyle">@style/Theme.AppCompat.Light.TitleTextStyle</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item> // You can change thickness here.

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

