<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/eleclogohigh_half_trans2"
    tools:context="mobit.elec.mbs.medas.android.YikikGirisActivity" >

    <TextView
        android:id="@+id/textAdresTarif"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:text="Adres:" />

    <EditText
        android:id="@+id/editAdresTarif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textAdresTarif"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textAdresTarif"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:textSize="12dp"
        android:ems="10" >

        <requestFocus />
    </EditText>



    <TextView
        android:id="@+id/textTesisatNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textAdresTarif"
        android:layout_alignEnd="@+id/textAdresTarif"
        android:layout_below="@+id/textAdresTarif"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:text="Tesisat No:" />

    <EditText
        android:id="@+id/editTesisatNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textTesisatNo"
        android:layout_toEndOf="@+id/textTesisatNo"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:textSize="12dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textReferansTesisatNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textAdresTarif"
        android:layout_alignEnd="@+id/textAdresTarif"
        android:layout_below="@+id/textTesisatNo"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:text="Komşu Tesisat No:" />

    <EditText
        android:id="@+id/editReferansTesisatNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textReferansTesisatNo"
        android:layout_toEndOf="@+id/textReferansTesisatNo"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:textSize="12dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textDirekNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textAdresTarif"
        android:layout_alignEnd="@+id/textAdresTarif"
        android:layout_below="@+id/textReferansTesisatNo"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:text="Direk No:" />

    <EditText
        android:id="@+id/editDirekNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textDirekNo"
        android:layout_toEndOf="@+id/textDirekNo"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:textSize="12dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textBoxNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textAdresTarif"
        android:layout_alignEnd="@+id/textAdresTarif"
        android:layout_below="@+id/textDirekNo"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:text="Box No:" />

    <EditText
        android:id="@+id/editBoxNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/textBoxNo"
        android:layout_toEndOf="@+id/textBoxNo"
        android:ems="10"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:textSize="12dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textSayacNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textAdresTarif"
        android:layout_alignEnd="@+id/textAdresTarif"
        android:layout_below="@+id/textBoxNo"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:text="Sayaç No:" />

    <EditText
        android:id="@+id/editSayacNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textSayacNo"
        android:layout_toEndOf="@+id/textSayacNo"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="number"
        android:textSize="12dp"
        android:imeOptions="actionNext"
        android:singleLine="true" />
    <TextView
        android:id="@+id/textT1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textAdresTarif"
        android:layout_alignEnd="@+id/textAdresTarif"
        android:layout_below="@+id/textSayacNo"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:text="T1:" />

    <EditText
        android:id="@+id/editT1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textT1"
        android:layout_toEndOf="@+id/textT1"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="12dp"
        android:imeOptions="actionNext"
        android:singleLine="true" />
    <TextView
        android:id="@+id/textT2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textAdresTarif"
        android:layout_alignEnd="@+id/textAdresTarif"
        android:layout_below="@+id/textT1"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:text="T2:" />

    <EditText
        android:id="@+id/editT2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textT2"
        android:layout_toEndOf="@+id/textT2"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="12dp"
        android:imeOptions="actionNext"
        android:singleLine="true" />
    <TextView
        android:id="@+id/textT3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textAdresTarif"
        android:layout_alignEnd="@+id/textAdresTarif"
        android:layout_below="@+id/textT2"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:text="T3:" />

    <EditText
        android:id="@+id/editT3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textT3"
        android:layout_toEndOf="@+id/textT3"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="12dp"
        android:imeOptions="actionNext"
        android:singleLine="true" />
    <TextView
        android:id="@+id/textRi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textAdresTarif"
        android:layout_alignEnd="@+id/textAdresTarif"
        android:layout_below="@+id/textT3"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:text="Reaktif" />

    <EditText
        android:id="@+id/editRi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textRi"
        android:layout_toEndOf="@+id/textRi"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="12dp"
        android:imeOptions="actionNext"
        android:singleLine="true" />
    <TextView
        android:id="@+id/textCi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textAdresTarif"
        android:layout_alignEnd="@+id/textAdresTarif"
        android:layout_below="@+id/textRi"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:text="Kapasitif" />

    <EditText
        android:id="@+id/editCi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textCi"
        android:layout_toEndOf="@+id/textCi"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="12dp"
        android:imeOptions="actionNext"
        android:singleLine="true" />
    <TextView
        android:id="@+id/textAciklama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textAdresTarif"
        android:layout_alignEnd="@+id/textAdresTarif"
        android:layout_below="@+id/textCi"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:text="Açıklama" />
    <EditText
        android:id="@+id/editAciklama"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textAciklama"
        android:ems="10"
        android:textSize="12dp"
        android:singleLine="true"
        />

    <Button
        android:id="@+id/buttonKaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/editAciklama"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:textSize="12dp"
        android:background="#78c158"
        android:text="Kaydet"
        />

</RelativeLayout>
