<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mobit.elec.android.TespitActivity" >

    <ListView
        android:id="@+id/listSorular"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape" >
    </ListView>

    <TextView
        android:id="@+id/textCoktanSecmeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/listSorular"
        android:layout_alignEnd="@+id/listSorular"
        android:layout_below="@+id/listSorular"
        android:layout_marginTop="11dp"
        android:text="Seçin..."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@drawable/shape" />

    <RadioGroup
        android:id="@+id/radioEvetHayir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignStart="@+id/listSorular"
        android:layout_alignEnd="@+id/listSorular"
        android:layout_below="@+id/listSorular"
         android:layout_marginTop="41dp"
        android:background="@drawable/shape"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radioEvet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Evet" />
        <RadioButton
            android:id="@+id/radioHayir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Hayır" />
        
    </RadioGroup>

    <EditText
        android:id="@+id/editVeri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/listSorular"
        android:layout_alignEnd="@+id/listSorular"
        android:layout_below="@+id/listSorular"
         android:layout_marginTop="60dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonCevapla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/listSorular"
        android:layout_below="@+id/listSorular"
        android:layout_marginTop="120dp"
        android:text="Cevapla" />

    <Button
        android:id="@+id/buttonSil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/buttonCevapla"
        android:layout_alignTop="@+id/buttonCevapla"
        android:layout_marginLeft="5dp"
        android:text="Sil" />

    <Button
        android:id="@+id/buttonZabit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/buttonSil"
        android:layout_alignTop="@+id/buttonSil"
        android:text="Zabıt" />

</RelativeLayout>