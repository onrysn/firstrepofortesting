<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mobit.elec.android.SayacTakmaActivity" >

    <TextView
        android:id="@+id/textCoktanSecmeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Sayaç No:"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/editSayacNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textCoktanSecmeli"
        android:layout_marginStart="100dp"
        android:layout_toEndOf="@+id/textCoktanSecmeli"
        android:ems="10"
        android:hint="sayaç numarası girin..."
        android:inputType="number"
        android:maxLength="9"
        android:singleLine="true"
        android:textSize="12dp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textCoktanSecmeli"
        android:layout_below="@+id/textCoktanSecmeli"
        android:layout_marginTop="11dp"
        android:text="Sayaç Kodu:"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textSayacKodu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignEnd="@+id/editSayacNo"
        android:layout_alignStart="@+id/editSayacNo"
        android:background="@drawable/shape"
        android:focusable="false"
        android:hint="sayaç kodu seçin..."
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="11dp"
        android:text="Sayaç Marka:"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textMarka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignEnd="@+id/editSayacNo"
        android:layout_alignStart="@+id/editSayacNo"
        android:background="@drawable/shape"
        android:focusable="false"
        android:hint="sayaç marka seçin..."
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="11dp"
        android:text="Sayaç Cinsi:"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textSayacCinsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignEnd="@+id/editSayacNo"
        android:layout_alignStart="@+id/editSayacNo"
        android:background="@drawable/shape"
        android:hint="sayaç cinsi seçin..."
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="11dp"
        android:text="Hane Sayısı:"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textHaneSayisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignEnd="@+id/editSayacNo"
        android:layout_alignStart="@+id/editSayacNo"
        android:background="@drawable/shape"
        android:hint="sayaç hane sayısı seçin..."
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="11dp"
        android:text="Faz Sayısı:"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textFazSayisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignEnd="@+id/editSayacNo"
        android:layout_alignStart="@+id/editSayacNo"
        android:background="@drawable/shape"
        android:hint="sayaç faz sayısı seçin..."
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="11dp"
        android:text="Gerilim:"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textGerilim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignEnd="@+id/editSayacNo"
        android:layout_alignStart="@+id/editSayacNo"
        android:background="@drawable/shape"
        android:hint="sayaç gerilimini seçin..."
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="11dp"
        android:text="Mülkiyet:"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textMulkiyet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignEnd="@+id/editSayacNo"
        android:layout_alignStart="@+id/editSayacNo"
        android:background="@drawable/shape"
        android:hint="sayaç mülkiyetini seçin..."
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="11dp"
        android:text="Akım:"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/editAkim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignEnd="@+id/editSayacNo"
        android:layout_alignStart="@+id/editSayacNo"
        android:ems="10"
        android:hint="sayaç akımı girin..."
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="3"
        android:nextFocusForward="@+id/editImalYili"
        android:singleLine="true"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="11dp"
        android:text="İmal Yılı:"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/editImalYili"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignEnd="@+id/editSayacNo"
        android:layout_alignStart="@+id/editSayacNo"
        android:ems="10"
        android:hint="imal yılı girin..."
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="4"
        android:textSize="12dp"
        android:nextFocusForward="@+id/editMuhurSeri"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="11dp"
        android:text="Mühür Seri/No:"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/editMuhurSeri"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignStart="@+id/editSayacNo"
        android:ems="10"
        android:imeOptions="actionNext"
        android:maxLength="1"
        android:nextFocusForward="@+id/editMuhurNo"
        android:singleLine="true"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/editMuhurNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editMuhurSeri"
        android:layout_alignEnd="@+id/editSayacNo"
        android:layout_toEndOf="@+id/editMuhurSeri"
        android:ems="10"
        android:hint="mühür no girin..."
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="8"
        android:singleLine="true"
        android:textSize="12dp" />

    <Button
        android:id="@+id/optikOku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView11"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="20dp"
        android:text="Optik Oku"
        android:textSize="12dp" />
    
    <Button
        android:id="@+id/sayacBilgi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/optikOku"
        android:layout_alignTop="@+id/optikOku"
        android:layout_marginStart="20dp"
        android:text="Sayaç Bilgi"
        android:textSize="12dp" />
    
    <Button
        android:id="@+id/buttonKaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/sayacBilgi"
        android:layout_alignTop="@+id/sayacBilgi"
        android:layout_marginStart="20dp"
        android:text="Tamam"
        android:textSize="12dp" />

</RelativeLayout>