    <TextView
        android:id="@+id/textPuant"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textGunduz"
        android:layout_alignStart="@+id/textGunduz"
        android:layout_alignEnd="@+id/textGunduz"
        android:layout_marginTop="8dp"
        android:text="T2"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editPuant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textPuant"
        android:layout_alignStart="@+id/editGunduz"
        android:layout_alignEnd="@+id/editGunduz"
        android:digits="0123456789.,"
        android:ems="10"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:textSize="12dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textGece"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPuant"
        android:layout_alignStart="@+id/textPuant"
        android:layout_alignEnd="@+id/textPuant"
        android:layout_marginTop="8dp"
        android:text="T3"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editGece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textGece"
        android:layout_alignStart="@+id/editPuant"
        android:layout_alignEnd="@+id/editPuant"
        android:digits="0123456789.,"
        android:ems="10"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:textSize="12dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textEnduktif"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textGece"
        android:layout_alignStart="@+id/textGece"
        android:layout_alignEnd="@+id/textGece"
        android:layout_marginTop="8dp"
        android:text="Reaktif"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editEnduktif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textEnduktif"
        android:layout_alignStart="@+id/editGece"
        android:layout_alignEnd="@+id/editGece"
        android:digits="0123456789.,"
        android:ems="10"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:textSize="12dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textKapasitif"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textEnduktif"
        android:layout_alignStart="@+id/textEnduktif"
        android:layout_alignEnd="@+id/textEnduktif"
        android:layout_marginTop="8dp"
        android:text="Kapasitif"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editKapasitif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textKapasitif"
        android:layout_alignStart="@+id/editEnduktif"
        android:layout_alignEnd="@+id/editEnduktif"
        android:digits="0123456789.,"
        android:ems="10"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:textSize="12dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textDemand"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textKapasitif"
        android:layout_alignStart="@+id/textKapasitif"
        android:layout_alignEnd="@+id/textKapasitif"
        android:layout_marginTop="8dp"
        android:text="Demand"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editDemand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textDemand"
        android:layout_alignStart="@+id/editKapasitif"
        android:layout_alignEnd="@+id/editKapasitif"
        android:digits="0123456789.,"
        android:ems="10"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:textSize="12dp"
        android:visibility="invisible" />

</RelativeLayout>
