<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textToplam"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:text="T"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editToplam"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textToplam"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/textToplam"
        android:digits="0123456789.,"
        android:ems="10"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:textSize="12dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textGunduz"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textToplam"
        android:layout_alignStart="@+id/textToplam"
        android:layout_alignEnd="@+id/textToplam"
        android:layout_marginTop="1dp"
        android:text="T1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editGunduz"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textGunduz"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/textGunduz"
        android:digits="0123456789.,"
        android:ems="10"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:textSize="12dp"
        android:visibility="invisible" />

